<div class="container mt-3">
  <div class="d-flex d-print-inline-block justify-content-between mb-4 mx-3">
    <%= link_to user_chatrooms_path(current_user) do %>
      <i class="fa-regular fa-comments icone link"></i>
    <% end %>
    <h2 class="mt-2">Profile</h2>
    <i class="fa-solid fa-bars icone"></i>
  </div>
  <div class="d-flex mx-3 mb-5">
    <div class="col-6">
      <%= link_to user_path(current_user) do %>
        <%= cl_image_tag current_user.photo.key, class: "avatar-xlarge" %>
      <% end %>
    </div>
    <div class="col-6 text-end mt-3">
      <h2><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h2>
    </div>
  </div>

  <div class="d-flex justify-content-evenly mb-4">
    <div class="col-4 d-grid gap-2 d-flex flex-column">
      <button type="button" class="btn btn-secondary border border-1 border-primary rounded-3">Edit profile</button>
      <div class="d-flex justify-content-center mt-3">
        <div class="d-flex flex-column align-items-center">
          <div>
            <i class="fa-solid fa-dice icone"></i>
          </div>
          <div>
            <strong><%= @user.participations.count %></strong>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4 d-grid gap-2">
      <button type="button" class="btn btn-primary shadow rounded rounded-3">Statistics</button>
      <div class="d-flex justify-content-center mt-3">
        <div class="d-flex flex-column align-items-center">
          <div>
            <i class="fa-solid fa-medal icone"></i>
          </div>
          <div>
            <strong><%= @victories.count %></strong>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div>
    <div class="card-profile d-flex justify-content-between">
      <div class="card-profile-infos">
        <h5>Tarot</h5>
        <h4>Level <%= @user.current_level %></h4>
        <p>Reliability: 30%</p>
      </div>
      <%= image_tag "tarot_cards.jpg" %>
    </div>
  </div>

  <div>
    <%= line_chart @user.level_history_data %>
  </div>
</div>
