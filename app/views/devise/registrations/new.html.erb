<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 form-login">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      placeholder: "yourmail@mail.com" %>
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      placeholder: "John" %>
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      placeholder: "Doe" %>
          <%= f.association :game_type,
                      required: true,
                      autofocus: true,
                      # collection: GameType.all,
                      # label_method: :name,
                      selected: GameType.first.name,
                      include_blank: "Select a favorite game type" %>
          <%= f.input :photo, as: :file %>
          <%= f.input :username,
                      required: true,
                      autofocus: true,
                      placeholder: "Doe" %>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      placeholder: "••••••" %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "SIGN UP", class: "btn btn-primary" %>
        </div>
      <% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
