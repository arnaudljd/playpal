<% if games.empty? %>
  <div class="info-panels">
      <p><i class="fa-regular fa-face-grin-beam-sweat"></i>There are no games in <%= params[:query] %></p>
  </div>
<% else %>
  <div class="info-panels">
      <p><i class="fa-regular fa-face-laugh-wink"></i>We found <%= games.size %> games near <%= params[:query] %></p>
  </div>
  <% games.each do |game| %>
    <%= render "shared/game_card_join", game: game %>
  <% end %>
<% end %>
